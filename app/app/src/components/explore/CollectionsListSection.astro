---
import CollectionsListButtons from '~/components/explore/CollectionsListButtons.astro'
import CollectionsList from '~/components/explore/CollectionsList.svelte'

import { i18nFactory } from '~/i18n'
import type { Locales } from '~/i18n'
const _ = i18nFactory(Astro.currentLocale as Locales | undefined)
---

<div class="collections-list-wrapper">
	<CollectionsListButtons />
	<CollectionsList client:visible locale={Astro.currentLocale as Locales | undefined} />
</div>

<style lang="scss">
	.collections-list-wrapper {
		@apply flex flex-col gap-2;
		@apply py-2;
	}
</style>
