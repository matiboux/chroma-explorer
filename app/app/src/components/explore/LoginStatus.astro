---
import LoginStatusText from '~/components/explore/LoginStatusText.svelte'
---

<div class="login-status-wrapper">
	<div class="login-status">
		<LoginStatusText client:visible />
	</div>
	<div class="logout">
		<button class="logout-btn">
			<span class="icon icon-[mdi--logout] icon-align"></span>
			<span class="sr-only">
				Logout
			</span>
		</button>
	</div>
</div>

<style lang="scss">
	.login-status-wrapper {
		@apply flex justify-between items-center;
		@apply bg-gray-100;

		.login-status {
			@apply flex-grow;
			@apply px-3 py-1;
			@apply text-sm;
		}

		.logout .logout-btn {
			@apply px-2 py-1 aspect-square;

			&:hover {
				@apply bg-gray-200;
			}
		}
	}
</style>
